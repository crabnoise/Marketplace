<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="vbox"
      alignment="CENTER_LEFT"
      prefHeight="480.0" prefWidth="480.0"
      styleClass="blue-panel"
      stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cboard.marketplace.marketplace_frontend.SignUpController">

    <children>

        <Label text="Sign Up" textFill="#227cd7">
            <font>
                <Font size="22.0" />
            </font>
            <VBox.margin>
                <Insets left="20.0" />
            </VBox.margin>
        </Label>

        <!-- First Name Field -->
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
            <children>
                <TextField fx:id="firstNameField" promptText="First Name" styleClass="info-box" HBox.hgrow="ALWAYS" />
                <FontIcon iconColor="WHITE" iconLiteral="fas-user" iconSize="20" wrappingWidth="24.0">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </FontIcon>
            </children>
            <VBox.margin>
                <Insets top="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </HBox>

        <!-- Last Name Field -->
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
            <children>
                <TextField fx:id="lastNameField" promptText="Last Name" styleClass="info-box" HBox.hgrow="ALWAYS" />
                <FontIcon iconColor="WHITE" iconLiteral="fas-user" iconSize="20" wrappingWidth="24.0">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </FontIcon>
            </children>
            <VBox.margin>
                <Insets top="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </HBox>

        <!-- Email Field -->
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
            <children>
                <TextField fx:id="emailField" promptText="Email" styleClass="info-box" HBox.hgrow="ALWAYS" />
                <FontIcon iconColor="WHITE" iconLiteral="fas-envelope" iconSize="20" wrappingWidth="24.0">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </FontIcon>
            </children>
            <VBox.margin>
                <Insets top="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </HBox>

        <!-- Username Field -->
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
            <children>
                <TextField fx:id="usernameField" promptText="Username" styleClass="info-box" HBox.hgrow="ALWAYS" />
                <FontIcon iconColor="WHITE" iconLiteral="fas-user-circle" iconSize="20" wrappingWidth="24.0">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </FontIcon>
            </children>
            <VBox.margin>
                <Insets top="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </HBox>

        <!-- Password Field -->
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
            <children>
                <TextField fx:id="passwordField" promptText="Password" styleClass="info-box" HBox.hgrow="ALWAYS" />
                <FontIcon iconColor="WHITE" iconLiteral="fas-key" iconSize="20" wrappingWidth="24.0">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </FontIcon>
            </children>
            <VBox.margin>
                <Insets top="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </HBox>

        <!-- Error Label -->
        <Label fx:id="errorLabel" textFill="RED" visible="false">
            <font>
                <Font size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" left="20.0" />
            </VBox.margin>
        </Label>

        <!-- Sign Up Button -->
        <Button fx:id="signUpButton"
                text="Sign Up"
                onAction="#handleSignUpButtonAction"
                prefHeight="46.0" prefWidth="498.0"
                styleClass="blue-btn">
            <font>
                <Font size="22.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>