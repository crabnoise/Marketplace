<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cboard.marketplace.marketplace_frontend.HelpPopupController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Need Help?" style="-fx-text-fill: #227cd7;">
        <font>
            <Font size="24"/>
        </font>
    </Label>

    <TextField fx:id="searchField" promptText="Search Help..." prefWidth="300"/>

    <TextArea fx:id="helpTextArea" wrapText="true" editable="false" prefHeight="400" prefWidth="400"
              style="-fx-control-inner-background: #f5f5f5; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />

    <Button text="Close" onAction="#closeHelp" style="-fx-background-color: #227cd7; -fx-text-fill: white; -fx-background-radius: 8px; -fx-font-size: 14px;" />
</VBox>